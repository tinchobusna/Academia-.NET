@page "/home"

<PageTitle>Sistema Académico</PageTitle>

<div class="home-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-icon-wrapper">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <h1 class="hero-title">Sistema de Gestión Académica</h1>
            <p class="hero-subtitle">Bienvenido al sistema integral de gestión educativa</p>
            <div class="hero-stats">
                <div class="stat-item">
                    <span class="stat-number">4</span>
                    <span class="stat-label">Módulos</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">100%</span>
                    <span class="stat-label">Eficiencia</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">24/7</span>
                    <span class="stat-label">Disponible</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="features-grid">
        <div class="feature-card card-primary">
            <div class="feature-icon-wrapper">
                <i class="fas fa-users"></i>
            </div>
            <h3 class="feature-title">Usuarios</h3>
            <p class="feature-description">Gestión completa de usuarios del sistema con roles y permisos</p>
            <a href="/usuarios" class="feature-btn">
                <span>Ver Usuarios</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-success">
            <div class="feature-icon-wrapper">
                <i class="fas fa-user-graduate"></i>
            </div>
            <h3 class="feature-title">Personas</h3>
            <p class="feature-description">Administra estudiantes, profesores y personal administrativo</p>
            <a href="/personas" class="feature-btn">
                <span>Ver Personas</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-warning">
            <div class="feature-icon-wrapper">
                <i class="fas fa-book"></i>
            </div>
            <h3 class="feature-title">Cursos</h3>
            <p class="feature-description">Gestiona cursos, horarios y asignación de profesores</p>
            <a href="/cursos" class="feature-btn">
                <span>Ver Cursos</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-info">
            <div class="feature-icon-wrapper">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h3 class="feature-title">Materias</h3>
            <p class="feature-description">Administra materias, planes de estudio y contenidos</p>
            <a href="/materias" class="feature-btn">
                <span>Ver Materias</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-purple">
            <div class="feature-icon-wrapper">
                <i class="fas fa-users-cog"></i>
            </div>
            <h3 class="feature-title">Comisiones</h3>
            <p class="feature-description">Organiza comisiones y grupos de estudiantes</p>
            <a href="/comisiones" class="feature-btn">
                <span>Ver Comisiones</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-teal">
            <div class="feature-icon-wrapper">
                <i class="fas fa-award"></i>
            </div>
            <h3 class="feature-title">Especialidades</h3>
            <p class="feature-description">Gestiona especialidades y carreras académicas</p>
            <a href="/especialidades" class="feature-btn">
                <span>Ver Especialidades</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-indigo">
            <div class="feature-icon-wrapper">
                <i class="fas fa-folder"></i>
            </div>
            <h3 class="feature-title">Planes</h3>
            <p class="feature-description">Administra planes de estudio y mallas curriculares</p>
            <a href="/planes" class="feature-btn">
                <span>Ver Planes</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="feature-card card-orange">
            <div class="feature-icon-wrapper">
                <i class="fas fa-file-alt"></i>
            </div>
            <h3 class="feature-title">Reportes</h3>
            <p class="feature-description">Genera reportes y estadísticas del sistema</p>
            <a href="/reportes" class="feature-btn">
                <span>Ver Reportes</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>