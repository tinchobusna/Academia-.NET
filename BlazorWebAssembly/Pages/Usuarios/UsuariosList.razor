@page "/usuarios"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>Usuarios</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta página</div>
    return;
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Gestión de Usuarios</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = string.Empty)"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="AgregarUsuario">
                <span class="bi bi-plus-circle"></span> Agregar
            </button>
            <button class="btn btn-secondary ms-2" @onclick="LoadUsuarios">
                <span class="bi bi-arrow-clockwise"></span> Refrescar
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (usuarios == null || !usuarios.Any())
    {
        <div class="alert alert-info">No hay usuarios registrados</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Habilitado</th>
                        <th>Persona</th>
                        <th style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in usuarios)
                    {
                        <tr>
                            <td>@usuario.IdUsuario</td>
                            <td>@usuario.NombreUsuario</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Apellido</td>
                            <td>@usuario.Email</td>
                            <td>
                                @if (usuario.Habilitado)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>@GetPersonaNombre(usuario.IdPersona)</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => ModificarUsuario(usuario.IdUsuario)">
                                    <span class="bi bi-pencil"></span> Modificar
                                </button>
                                <button class="btn btn-sm btn-danger ms-1" @onclick="() => ConfirmarEliminar(usuario)">
                                    <span class="bi bi-trash"></span> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el usuario <strong>@usuarioToDelete?.NombreUsuario</strong> (ID: @usuarioToDelete?.IdUsuario)?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarUsuario">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UsuarioDTO>? usuarios;
    private List<PersonaDTO>? personas;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool showDeleteConfirm = false;
    private UsuarioDTO? usuarioToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        await LoadUsuarios();
        await LoadPersonas();
    }

    private async Task LoadUsuarios()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            var result = await API.Usuarios.UsuarioApiClient.GetAllAsync();
            usuarios = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadPersonas()
    {
        try
        {
            var result = await API.Personas.PersonaApiClient.GetAllAsync();
            personas = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar personas: {ex.Message}";
        }
    }

    private string GetPersonaNombre(int idPersona)
    {
        var persona = personas?.FirstOrDefault(p => p.IdPersona == idPersona);
        return persona != null ? $"{persona.Apellido}" : "N/A";
    }

    private void AgregarUsuario()
    {
        Navigation.NavigateTo("/usuarios/nuevo");
    }

    private void ModificarUsuario(int id)
    {
        Navigation.NavigateTo($"/usuarios/editar/{id}");
    }

    private void ConfirmarEliminar(UsuarioDTO usuario)
    {
        usuarioToDelete = usuario;
        showDeleteConfirm = true;
    }

    private void CancelarEliminar()
    {
        usuarioToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task EliminarUsuario()
    {
        if (usuarioToDelete == null) return;

        try
        {
            await API.Usuarios.UsuarioApiClient.DeleteAsync(usuarioToDelete.IdUsuario);
            successMessage = $"Usuario '{usuarioToDelete.NombreUsuario}' eliminado correctamente";
            showDeleteConfirm = false;
            usuarioToDelete = null;
            await LoadUsuarios();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar usuario: {ex.Message}";
            showDeleteConfirm = false;
        }
    }
}
