@page "/especialidades/nueva"
@page "/especialidades/editar/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>@(Id == 0 ? "Nueva Especialidad" : "Editar Especialidad")</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta p치gina</div>
    return;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@(Id == 0 ? "Nueva Especialidad" : "Editar Especialidad")</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@especialidad" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            @if (Id > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label">ID</label>
                                    <input type="text" class="form-control" value="@especialidad.IdEspecialidad" disabled />
                                </div>
                            }

                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripci칩n *</label>
                                <InputTextArea id="descripcion" class="form-control" @bind-Value="especialidad.Descripcion" rows="3" placeholder="Ingrese la descripci칩n de la especialidad" />
                                <ValidationMessage For="@(() => especialidad.Descripcion)" />
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                                    <span class="bi bi-x-circle"></span> Cancelar
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Guardando...</span>
                                    }
                                    else
                                    {
                                        <span class="bi bi-check-circle"></span>
                                        <span> Guardar</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private EspecialidadDTO especialidad = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            await LoadEspecialidad();
        }
    }

    private async Task LoadEspecialidad()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            especialidad = await EspecialidadApiClient.GetAsync(Id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar especialidad: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;

            if (string.IsNullOrWhiteSpace(especialidad.Descripcion))
            {
                errorMessage = "La descripci칩n es requerida";
                return;
            }

            if (Id == 0)
            {
                await EspecialidadApiClient.AddAsync(especialidad);
            }
            else
            {
                await EspecialidadApiClient.UpdateAsync(especialidad);
            }

            Navigation.NavigateTo("/especialidades");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar especialidad: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/especialidades");
    }
}
