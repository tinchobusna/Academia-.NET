@page "/cursos"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>Cursos</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta página</div>
    return;
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Gestión de Cursos</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = string.Empty)"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="AgregarCurso">
                <span class="bi bi-plus-circle"></span> Agregar
            </button>
            <button class="btn btn-secondary ms-2" @onclick="LoadCursos">
                <span class="bi bi-arrow-clockwise"></span> Refrescar
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (cursos == null || !cursos.Any())
    {
        <div class="alert alert-info">No hay cursos registrados</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Materia</th>
                        <th>Comisión</th>
                        <th>Año Calendario</th>
                        <th>Cupo</th>
                        <th style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var curso in cursos)
                    {
                        <tr>
                            <td>@curso.IdCurso</td>
                            <td>@GetMateriaNombre(curso.IdMateria)</td>
                            <td>@GetComisionNombre(curso.IdComision)</td>
                            <td>@curso.AnioCalendario</td>
                            <td>@curso.Cupo</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => ModificarCurso(curso.IdCurso)">
                                    <span class="bi bi-pencil"></span> Modificar
                                </button>
                                <button class="btn btn-sm btn-danger ms-1" @onclick="() => ConfirmarEliminar(curso)">
                                    <span class="bi bi-trash"></span> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el curso con ID <strong>@cursoToDelete?.IdCurso</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarCurso">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CursoDTO>? cursos;
    private List<MateriaDTO>? materias;
    private List<ComisionDTO>? comisiones;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool showDeleteConfirm = false;
    private CursoDTO? cursoToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        await LoadCursos();
        await LoadMaterias();
        await LoadComisiones();
    }

    private async Task LoadCursos()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            var result = await API.Cursos.CursoApiClient.GetAllAsync();
            cursos = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar cursos: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadMaterias()
    {
        try
        {
            var result = await API.Materias.MateriaApiClient.GetAllAsync();
            materias = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materias: {ex.Message}";
        }
    }

    private async Task LoadComisiones()
    {
        try
        {
            var result = await API.Comisiones.ComisionApiClient.GetAllAsync();
            comisiones = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar comisiones: {ex.Message}";
        }
    }

    private string GetMateriaNombre(int idMateria)
    {
        var materia = materias?.FirstOrDefault(m => m.IdMateria == idMateria);
        return materia?.Descripcion ?? "N/A";
    }

    private string GetComisionNombre(int idComision)
    {
        var comision = comisiones?.FirstOrDefault(c => c.IdComision == idComision);
        return comision?.Descripcion ?? "N/A";
    }

    private void AgregarCurso()
    {
        Navigation.NavigateTo("/cursos/nuevo");
    }

    private void ModificarCurso(int id)
    {
        Navigation.NavigateTo($"/cursos/editar/{id}");
    }

    private void ConfirmarEliminar(CursoDTO curso)
    {
        cursoToDelete = curso;
        showDeleteConfirm = true;
    }

    private void CancelarEliminar()
    {
        cursoToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task EliminarCurso()
    {
        if (cursoToDelete == null) return;

        try
        {
            await API.Cursos.CursoApiClient.DeleteAsync(cursoToDelete.IdCurso);
            successMessage = $"Curso con ID {cursoToDelete.IdCurso} eliminado correctamente";
            showDeleteConfirm = false;
            cursoToDelete = null;
            await LoadCursos();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar curso: {ex.Message}";
            showDeleteConfirm = false;
        }
    }
}
