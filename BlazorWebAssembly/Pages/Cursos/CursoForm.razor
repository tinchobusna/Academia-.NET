@page "/cursos/nuevo"
@page "/cursos/editar/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>@(Id == 0 ? "Nuevo Curso" : "Editar Curso")</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta página</div>
    return;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@(Id == 0 ? "Nuevo Curso" : "Editar Curso")</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@curso" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            @if (Id > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label">ID</label>
                                    <input type="text" class="form-control" value="@curso.IdCurso" disabled />
                                </div>
                            }

                            <div class="mb-3">
                                <label for="materia" class="form-label">Materia *</label>
                                <InputSelect id="materia" class="form-select" @bind-Value="curso.IdMateria">
                                    <option value="0">-- Seleccione una materia --</option>
                                    @if (materias != null)
                                    {
                                        @foreach (var materia in materias)
                                        {
                                            <option value="@materia.IdMateria">@materia.Descripcion</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => curso.IdMateria)" />
                            </div>

                            <div class="mb-3">
                                <label for="comision" class="form-label">Comisión *</label>
                                <InputSelect id="comision" class="form-select" @bind-Value="curso.IdComision">
                                    <option value="0">-- Seleccione una comisión --</option>
                                    @if (comisiones != null)
                                    {
                                        @foreach (var comision in comisiones)
                                        {
                                            <option value="@comision.IdComision">@comision.Descripcion</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => curso.IdComision)" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="anioCalendario" class="form-label">Año Calendario *</label>
                                    <InputNumber id="anioCalendario" class="form-control" @bind-Value="curso.AnioCalendario" />
                                    <ValidationMessage For="@(() => curso.AnioCalendario)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="cupo" class="form-label">Cupo *</label>
                                    <InputNumber id="cupo" class="form-control" @bind-Value="curso.Cupo" />
                                    <ValidationMessage For="@(() => curso.Cupo)" />
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                                    <span class="bi bi-x-circle"></span> Cancelar
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Guardando...</span>
                                    }
                                    else
                                    {
                                        <span class="bi bi-check-circle"></span>
                                        <span> Guardar</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private CursoDTO curso = new();
    private List<MateriaDTO>? materias;
    private List<ComisionDTO>? comisiones;
    private bool isLoading = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMaterias();
        await LoadComisiones();
        
        if (Id > 0)
        {
            await LoadCurso();
        }
    }

    private async Task LoadMaterias()
    {
        try
        {
            var result = await API.Materias.MateriaApiClient.GetAllAsync();
            materias = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materias: {ex.Message}";
        }
    }

    private async Task LoadComisiones()
    {
        try
        {
            var result = await API.Comisiones.ComisionApiClient.GetAllAsync();
            comisiones = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar comisiones: {ex.Message}";
        }
    }

    private async Task LoadCurso()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            curso = await API.Cursos.CursoApiClient.GetAsync(Id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar curso: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;

            if (curso.IdMateria == 0)
            {
                errorMessage = "Debe seleccionar una materia";
                return;
            }

            if (curso.IdComision == 0)
            {
                errorMessage = "Debe seleccionar una comisión";
                return;
            }

            if (curso.AnioCalendario <= 0)
            {
                errorMessage = "El año calendario debe ser mayor a 0";
                return;
            }

            if (curso.Cupo <= 0)
            {
                errorMessage = "El cupo debe ser mayor a 0";
                return;
            }

            if (Id == 0)
            {
                await API.Cursos.CursoApiClient.AddAsync(curso);
            }
            else
            {
                await API.Cursos.CursoApiClient.UpdateAsync(curso);
            }

            Navigation.NavigateTo("/cursos");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar curso: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/cursos");
    }
}
