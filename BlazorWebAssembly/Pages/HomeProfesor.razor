@page "/home-profesor"
@layout MainLayoutProfesor
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Portal Profesor</PageTitle>

<div class="home-container">
    <!-- Hero Section -->
    <div class="hero-section" style="background: linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%);">
        <div class="hero-content">
            <div class="hero-icon-wrapper">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <h1 class="hero-title">Bienvenido @nombreUsuario</h1>
            <p class="hero-subtitle">Portal Profesor - Sistema Académico</p>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="features-grid">
        <div class="feature-card card-success">
            <div class="feature-icon-wrapper">
                <i class="fas fa-pencil-alt"></i>
            </div>
            <h3 class="feature-title">Poner Notas</h3>
            <p class="feature-description">Registra y gestiona las calificaciones de tus alumnos</p>
            <a href="/poner-notas" class="feature-btn">
                <span>Ir a Poner Notas</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

@code {
    private string? nombreUsuario;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var tipoPersona = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "tipoPersona");
            nombreUsuario = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "nombreUsuario");

            if (tipoPersona != "Profesor")
            {
                Navigation.NavigateTo("/login");
            }
        }
        catch
        {
            Navigation.NavigateTo("/login");
        }
    }
}