@page "/personas"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>Personas</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta página</div>
    return;
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Gestión de Personas</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = string.Empty)"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="AgregarPersona">
                <span class="bi bi-plus-circle"></span> Agregar
            </button>
            <button class="btn btn-secondary ms-2" @onclick="LoadPersonas">
                <span class="bi bi-arrow-clockwise"></span> Refrescar
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (personas == null || !personas.Any())
    {
        <div class="alert alert-info">No hay personas registradas</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Apellido</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Tipo</th>
                        <th>Legajo</th>
                        <th>Teléfono</th>
                        <th style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var persona in personas)
                    {
                        <tr>
                            <td>@persona.IdPersona</td>
                            <td>@persona.Apellido</td>
                            <td>@GetNombreFromEmail(persona.Email)</td>
                            <td>@persona.Email</td>
                            <td>
                                <span class="badge @GetTipoPersonaBadgeClass(persona.TipoPersona)">
                                    @persona.TipoPersona
                                </span>
                            </td>
                            <td>@persona.Legajo</td>
                            <td>@persona.Telefono</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => ModificarPersona(persona.IdPersona)">
                                    <span class="bi bi-pencil"></span> Modificar
                                </button>
                                <button class="btn btn-sm btn-danger ms-1" @onclick="() => ConfirmarEliminar(persona)">
                                    <span class="bi bi-trash"></span> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar a <strong>@personaToDelete?.Apellido</strong> (ID: @personaToDelete?.IdPersona)?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarPersona">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PersonaDTO>? personas;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool showDeleteConfirm = false;
    private PersonaDTO? personaToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadPersonas();
    }

    private async Task LoadPersonas()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            var result = await API.Personas.PersonaApiClient.GetAllAsync();
            personas = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar personas: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetNombreFromEmail(string email)
    {
        if (string.IsNullOrEmpty(email)) return "N/A";
        var parts = email.Split('@');
        return parts.Length > 0 ? parts[0] : "N/A";
    }

    private string GetTipoPersonaBadgeClass(string tipoPersona)
    {
        return tipoPersona switch
        {
            "Admin" => "bg-danger",
            "Docente" => "bg-primary",
            "Alumno" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private void AgregarPersona()
    {
        Navigation.NavigateTo("/personas/nueva");
    }

    private void ModificarPersona(int id)
    {
        Navigation.NavigateTo($"/personas/editar/{id}");
    }

    private void ConfirmarEliminar(PersonaDTO persona)
    {
        personaToDelete = persona;
        showDeleteConfirm = true;
    }

    private void CancelarEliminar()
    {
        personaToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task EliminarPersona()
    {
        if (personaToDelete == null) return;

        try
        {
            await API.Personas.PersonaApiClient.DeleteAsync(personaToDelete.IdPersona);
            successMessage = $"Persona '{personaToDelete.Apellido}' eliminada correctamente";
            showDeleteConfirm = false;
            personaToDelete = null;
            await LoadPersonas();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar persona: {ex.Message}";
            showDeleteConfirm = false;
        }
    }
}
