@page "/materias"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateService AuthState

<PageTitle>Materias</PageTitle>

@if (AuthState.UserRole != "Admin")
{
    <div class="alert alert-danger">No tiene permisos para acceder a esta página</div>
    return;
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Gestión de Materias</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = string.Empty)"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" @onclick="AgregarMateria">
                <span class="bi bi-plus-circle"></span> Agregar
            </button>
            <button class="btn btn-secondary ms-2" @onclick="LoadMaterias">
                <span class="bi bi-arrow-clockwise"></span> Refrescar
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (materias == null || !materias.Any())
    {
        <div class="alert alert-info">No hay materias registradas</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Hs. Semanales</th>
                        <th>Hs. Totales</th>
                        <th>Plan</th>
                        <th style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var materia in materias)
                    {
                        <tr>
                            <td>@materia.IdMateria</td>
                            <td>@materia.Descripcion</td>
                            <td>@materia.HsSemanales</td>
                            <td>@materia.HsTotales</td>
                            <td>@GetPlanNombre(materia.IdPlan)</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="() => ModificarMateria(materia.IdMateria)">
                                    <span class="bi bi-pencil"></span> Modificar
                                </button>
                                <button class="btn btn-sm btn-danger ms-1" @onclick="() => ConfirmarEliminar(materia)">
                                    <span class="bi bi-trash"></span> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar la materia <strong>@materiaToDelete?.Descripcion</strong> (ID: @materiaToDelete?.IdMateria)?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarMateria">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<MateriaDTO>? materias;
    private List<PlanDTO>? planes;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool showDeleteConfirm = false;
    private MateriaDTO? materiaToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        await LoadMaterias();
        await LoadPlanes();
    }

    private async Task LoadMaterias()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            var result = await API.Materias.MateriaApiClient.GetAllAsync();
            materias = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materias: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadPlanes()
    {
        try
        {
            var result = await API.Planes.PlanApiClient.GetAllAsync();
            planes = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar planes: {ex.Message}";
        }
    }

    private string GetPlanNombre(int idPlan)
    {
        var plan = planes?.FirstOrDefault(p => p.IdPlan == idPlan);
        return plan?.Descripcion ?? "N/A";
    }

    private void AgregarMateria()
    {
        Navigation.NavigateTo("/materias/nueva");
    }

    private void ModificarMateria(int id)
    {
        Navigation.NavigateTo($"/materias/editar/{id}");
    }

    private void ConfirmarEliminar(MateriaDTO materia)
    {
        materiaToDelete = materia;
        showDeleteConfirm = true;
    }

    private void CancelarEliminar()
    {
        materiaToDelete = null;
        showDeleteConfirm = false;
    }

    private async Task EliminarMateria()
    {
        if (materiaToDelete == null) return;

        try
        {
            await API.Materias.MateriaApiClient.DeleteAsync(materiaToDelete.IdMateria);
            successMessage = $"Materia '{materiaToDelete.Descripcion}' eliminada correctamente";
            showDeleteConfirm = false;
            materiaToDelete = null;
            await LoadMaterias();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar materia: {ex.Message}";
            showDeleteConfirm = false;
        }
    }
}
