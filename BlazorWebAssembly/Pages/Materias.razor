@page "/materias"
@using DTOs
@using API.Materias
@using API.Planes
@inject IJSRuntime JSRuntime
@using BlazorWebAssembly.Components
@inject NavigationManager Navigation

<PageTitle>Materias</PageTitle>

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-header-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="page-header-text">
                <h1>Gestión de Materias</h1>
                <p>Administra materias, planes de estudio y contenidos académicos</p>
            </div>
        </div>
    </div>

    <!-- Content Card -->
    <div class="content-card">
        <div style="padding: 2rem;">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert-modern alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>@errorMessage</span>
                    <button type="button" class="alert-close-btn" @onclick="() => errorMessage = string.Empty">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert-modern alert-success">
                    <i class="fas fa-check-circle"></i>
                    <span>@successMessage</span>
                    <button type="button" class="alert-close-btn" @onclick="() => successMessage = string.Empty">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            @if (loading)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <div class="loading-text">Cargando materias...</div>
                </div>
            }
            else
            {
                <div class="table-responsive-modern">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>IdMateria</th>
                                <th>Descripción</th>
                                <th>Hs Semanales</th>
                                <th>Hs Totales</th>
                                <th>Plan</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @if (materias != null && materias.Any())
                            {
                                @foreach (var materia in materias)
                                {
                                    var planDesc = planes?.FirstOrDefault(p => p.IdPlan == materia.IdPlan)?.Descripcion ?? "Sin plan";
                                    <tr @onclick="() => SelectMateria(materia)"
                                        class="@(selectedMateria?.IdMateria == materia.IdMateria ? "table-active" : "")"
                                        style="cursor: pointer;">
                                        <td>@materia.IdMateria</td>
                                        <td><strong>@materia.Descripcion</strong></td>
                                        <td>@materia.HsSemanales</td>
                                        <td>@materia.HsTotales</td>
                                        <td>@planDesc</td> 
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="empty-state">
                                        <i class="fas fa-inbox"></i>
                                        <p>No hay materias registradas</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="action-buttons">
                    <button class="btn-modern btn-primary" @onclick="RefreshMaterias">
                        <i class="fas fa-sync-alt"></i>
                        <span>Refrescar</span>
                    </button>
                    <button class="btn-modern btn-success" @onclick="AgregarMateria">
                        <i class="fas fa-plus"></i>
                        <span>Agregar</span>
                    </button>
                    <button class="btn-modern btn-warning" disabled="@(selectedMateria == null)" @onclick="ModificarMateria">
                        <i class="fas fa-edit"></i>
                        <span>Modificar</span>
                    </button>
                    <button class="btn-modern btn-danger" disabled="@(selectedMateria == null)" @onclick="EliminarMateria">
                        <i class="fas fa-trash-alt"></i>
                        <span>Eliminar</span>
                    </button>
                </div>

                @if (selectedMateria != null)
                {
                    <div class="selection-info">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Materia seleccionada:</strong> @selectedMateria.Descripcion (ID: @selectedMateria.IdMateria)
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@if (showDetalle)
{
    <MateriaDetalle Materia="@materiaDetalle"
                    IsEditMode="@isEditMode"
                    OnSave="@HandleSave"
                    OnCancel="@HandleCancel" />
}

@if (showDeleteConfirm)
{
    <div class="modal-modern fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content-modern">
                <div class="modal-header-modern">
                    <h5>
                        <i class="fas fa-exclamation-triangle"></i>
                        Confirmar eliminación
                    </h5>
                    <button type="button" class="alert-close-btn" @onclick="CancelDelete">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body-modern">
                    <p>¿Está seguro de eliminar la materia <strong>@selectedMateria?.Descripcion</strong>?</p>
                    <p class="text-muted" style="margin-top: 0.5rem; font-size: 0.9rem;">Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer-modern">
                    <button type="button" class="btn-modern" style="background: #64748b; color: #fff;" @onclick="CancelDelete" disabled="@isDeleting">
                        Cancelar
                    </button>
                    <button type="button" class="btn-modern btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <div class="loading-spinner" style="width: 16px; height: 16px; border-width: 2px; margin-right: 0.5rem;"></div>
                        }
                        else
                        {
                            <i class="fas fa-trash-alt"></i>
                        }
                        <span>Eliminar</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<MateriaDTO>? materias;
    private MateriaDTO? selectedMateria;
    private MateriaDTO materiaDetalle = new();
    private bool loading = true;
    private bool showDetalle = false;
    private bool isEditMode = false;
    private bool showDeleteConfirm = false;
    private bool isDeleting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private List<PlanDTO>? planes; 

    protected override async Task OnInitializedAsync() => await LoadMaterias();

    private async Task LoadMaterias()
    {
        try
        {
            loading = true;
            materias = (await MateriaApiClient.GetAllAsync())?.ToList();
            planes = (await PlanApiClient.GetAllAsync())?.ToList(); 
            selectedMateria = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materias: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void SelectMateria(MateriaDTO materia) =>
        selectedMateria = selectedMateria?.IdMateria == materia.IdMateria ? null : materia;

    private async Task RefreshMaterias()
    {
        await LoadMaterias();
        successMessage = "Lista actualizada correctamente";
    }

    private void AgregarMateria()
    {
        materiaDetalle = new MateriaDTO();
        isEditMode = false;
        showDetalle = true;
        StateHasChanged();
    }

    private async Task ModificarMateria()
    {
        if (selectedMateria == null) return;
        try
        {
            var materia = await MateriaApiClient.GetAsync(selectedMateria.IdMateria);
            if (materia != null)
            {
                materiaDetalle = materia;
                isEditMode = true;
                showDetalle = true;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materia: {ex.Message}";
        }
    }

    private void EliminarMateria() => showDeleteConfirm = true;

    private async Task ConfirmDelete()
    {
        try
        {
            isDeleting = true;
            await MateriaApiClient.DeleteAsync(selectedMateria!.IdMateria);
            successMessage = "Materia eliminada correctamente";
            showDeleteConfirm = false;
            await LoadMaterias();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar materia: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void CancelDelete() => showDeleteConfirm = false;

    private async Task HandleSave()
    {
        showDetalle = false;
        successMessage = isEditMode ? "Materia modificada correctamente" : "Materia agregada correctamente";
        await LoadMaterias();
    }

    private void HandleCancel() => showDetalle = false;
}